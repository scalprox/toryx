{
  "name": "@toryx/core",
  "version": "1.0.0",
  "description": "Type-safe error handling and async operations for TypeScript",
  "main": "/dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./express": {
      "types": "./dist/express/index.d.ts",
      "import": "./dist/express/index.mjs",
      "require": "./dist/express/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "prepublishOnly": "npm run build",
    "publish:npm": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/scalprox/toryx.git"
  },
  "keywords": [
    "promise",
    "node",
    "error",
    "handler",
    "result",
    "async",
    "middleware"
  ],
  "author": "Alexandre Schaller",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/scalprox/toryx/issues"
  },
  "homepage": "https://github.com/scalprox/toryx#readme",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@vitest/ui": "^4.0.10",
    "tsup": "^8.1.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.10"
  },
  "publishConfig": {
    "access": "public"
  }
}
